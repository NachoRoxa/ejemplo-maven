pipeline {
    agent any
    stages {
        stage("Paso 1: Compliar"){
            steps {
                script {
                sh "echo 'Creando carpeta'"
                // Run Maven on a Unix agent.
                sh "mkdir testGio"
                sh "mkdir TestRocha"
                }
            }
        }
        stage("Paso 2: Testear"){
            steps {
                script {
                sh "echo 'copiar carpeta!'"
                // Run Maven on a Unix agent.
                sh "cp testGio TestRocha/"
                }
            }
        }
    }
    post {
        always {
            sh "echo 'fase always executed post'"
        }
        success {
            sh "echo 'fase success'"
        }
        failure {
            sh "echo 'fase failure'"
        }
    }
}